<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Phoneword.MainPage">
    <VerticalStackLayout Spacing="15" Padding="20">
        <Label Text="Introduzca un Phoneword" FontSize="20"/>
        <Entry x:Name="PhoneNumberText" Text="1-555-NETMAUI"/>
        <Button x:Name="BotonTraducir" Text="Traducir" Clicked="OnTraducir"/>
        <Button x:Name="BotonLlamar" Text="Llamar" IsEnabled="False" Clicked="OnLlamar"/>
    </VerticalStackLayout>
</ContentPage>
